<div class="container mt-3">
    <row>
        <div class="col-md-12">
            <h2>Form Tambah Data Contact</h2>
            <% if (typeof errors !="undefined") { %>
                <div class="alert alert-danger" role="alert">
                    <ul>
                        <% errors.forEach(error => { %>
                            <li>
                                <%= error.msg %>
                            </li>
                            <% }) %>
                    </ul>
                </div>
                <% } %>

                    <form method="POST" action="/contact">
                        <table class="table" id="container">
                            <thead class=" text-primary">
                                <tr>
                                    <th>Nama</th>
                                    <th>Email</th>
                                    <th>No HP</th>
                                    <th> <button type="button" rel="tooltip" class="btn btn-success" id="add_btn1">
                                    <i class="bi bi-file-earmark-plus"></i>
                                    </button>

                                        <button type="button" rel="tooltip" id="del" class="btn btn-danger">
                                        <i class="bi bi-file-earmark-minus"  ></i>
                                    </button></th>
                                </tr>
                            </thead>
                            <tbody id="p">

                                <tr id='form'>
                                    <td><input type="text" class="form-control" id="nama" name="nama" placeholder="Nama">
                                    </td>
                                    <td><input type="text" class="form-control" id="email" name="email" placeholder="Email">
                                    </td>
                                    <td> <input type="number" class="form-control" id="nohp" name="nohp" placeholder="Nomor HP">
                                    </td>
                                    S
                                </tr>

                            </tbody>

                        </table>
                        <div class="col-md-3 pull pull-right"> <button type="submit" class="btn btn-primary">Submit</button>
                            <button type="button" class="btn btn-link">Cancel</button>
                        </div>
                    </form>

        </div>
    </row>
</div>

<script>
    $(document).ready(function() {
        $("#add_btn1").click(function() {
            $("#p").append(`  <tr id='form'>
                                <td><input type="text" class="form-control" id="nama" name="nama" placeholder="Nama">
                                </td>
                                <td><input type="text" class="form-control" id="email" name="email" placeholder="Email">
                                </td>
                                <td> <input type="number" class="form-control" id="nohp" name="nohp" placeholder="Nomor HP">
                                </td>
                              
                            </tr>`);
        });
        $("#del").click(function() {
            $("#form").remove();
        });
    });
</script>

</body>

</html>